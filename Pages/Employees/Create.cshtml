@page
@model buildone.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "Create Employee";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-person-plus me-2 text-primary"></i>Add New Employee
        </h1>
        <p class="text-muted mb-0">Create a new employee profile</p>
    </div>
    <div>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Employees
        </a>
    </div>
</div>

<!-- Alert Messages -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="post">
    <div class="row">
        <div class="col-lg-8">
            <!-- Basic Information -->
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person me-2"></i>Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Employee.FullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                            <input asp-for="Employee.FullName" class="form-control" placeholder="e.g., John Smith" required>
                            <span asp-validation-for="Employee.FullName" class="invalid-feedback"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Employee.Username" class="form-label">Username <span class="text-danger">*</span></label>
                            <input asp-for="Employee.Username" class="form-control" placeholder="e.g., jsmith" required>
                            <span asp-validation-for="Employee.Username" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-envelope me-2"></i>Contact Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Employee.Email" class="form-label">Email Address</label>
                            <input asp-for="Employee.Email" class="form-control" placeholder="e.g., john.smith@company.com">
                            <span asp-validation-for="Employee.Email" class="invalid-feedback"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Employee.Phone" class="form-label">Phone Number</label>
                            <input asp-for="Employee.Phone" class="form-control" placeholder="e.g., (555) 123-4567">
                            <span asp-validation-for="Employee.Phone" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Department Assignment -->
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-building me-2"></i>Department Assignment
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label asp-for="Employee.DepartmentId" class="form-label">Department</label>
                            <select asp-for="Employee.DepartmentId" class="form-select">
                                <option value="">Select department (optional)</option>
                                @foreach (var department in Model.Departments)
                                {
                                    <option value="@department.Id">@department.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Employee.DepartmentId" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Create Employee
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Information -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Employee Guidelines
                    </h6>
                </div>
                <div class="card-body">
                    <div class="small">
                        <h6>Required Fields</h6>
                        <ul class="mb-3">
                            <li><strong>Full Name:</strong> Employee's complete name</li>
                            <li><strong>Username:</strong> Unique system identifier</li>
                        </ul>

                        <h6>Optional Information</h6>
                        <ul class="mb-3">
                            <li><strong>Email:</strong> Work email address</li>
                            <li><strong>Phone:</strong> Contact phone number</li>
                            <li><strong>Department:</strong> Organizational unit</li>
                        </ul>

                        <h6>Important Notes</h6>
                        <ul class="mb-0">
                            <li>Username must be unique across all employees</li>
                            <li>Email address must be unique if provided</li>
                            <li>Employees can be assigned to assets after creation</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Generate username suggestion based on full name
        document.querySelector('input[name="Employee.FullName"]').addEventListener('blur', function() {
            const usernameInput = document.querySelector('input[name="Employee.Username"]');
            if (!usernameInput.value && this.value) {
                const parts = this.value.trim().split(' ');
                let suggestion = '';
                if (parts.length >= 2) {
                    // First letter of first name + last name
                    suggestion = (parts[0].charAt(0) + parts[parts.length - 1]).toLowerCase().replace(/[^a-z]/g, '');
                } else {
                    // Just the name if single word
                    suggestion = parts[0].toLowerCase().replace(/[^a-z]/g, '');
                }
                usernameInput.placeholder = `Suggested: ${suggestion}`;
            }
        });

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}