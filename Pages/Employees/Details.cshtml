@page
@model buildone.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = $"Employee Details - {Model.Employee.FullName}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-person me-2 text-primary"></i>@Model.Employee.FullName
        </h1>
        <p class="text-muted mb-0">Employee details and asset assignments</p>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Employee.Id" class="btn btn-outline-primary me-2">
            <i class="bi bi-pencil me-2"></i>Edit Employee
        </a>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Employees
        </a>
    </div>
</div>

<!-- Alert Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <!-- Employee Information -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="bi bi-person me-2"></i>Employee Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted">Full Name</label>
                        <div class="fw-medium">@Model.Employee.FullName</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Username</label>
                        <div class="fw-medium">@Model.Employee.Username</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Email</label>
                        <div class="fw-medium">
                            @if (!string.IsNullOrEmpty(Model.Employee.Email))
                            {
                                <a href="mailto:@Model.Employee.Email">@Model.Employee.Email</a>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Phone</label>
                        <div class="fw-medium">
                            @if (!string.IsNullOrEmpty(Model.Employee.Phone))
                            {
                                <span>@Model.Employee.Phone</span>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Department</label>
                        <div class="fw-medium">
                            @if (Model.Employee.Department != null)
                            {
                                <span class="badge bg-light text-dark">@Model.Employee.Department.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">No department assigned</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Assigned Assets -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="bi bi-laptop me-2"></i>Assigned Assets (@Model.Employee.Assets.Count)
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Employee.Assets.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Asset</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var asset in Model.Employee.Assets)
                                {
                                    <tr>
                                        <td>
                                            <div>
                                                <div class="fw-medium">@asset.AssetDescription</div>
                                                <small class="text-muted">
                                                    <span class="badge bg-light text-dark">@asset.AssetTag</span>
                                                </small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@asset.Type</span>
                                        </td>
                                        <td>
                                            @switch (asset.Status.ToString())
                                            {
                                                case "Active":
                                                    <span class="badge bg-success">Active</span>
                                                    break;
                                                case "InStock":
                                                    <span class="badge bg-primary">In Stock</span>
                                                    break;
                                                case "Maintenance":
                                                    <span class="badge bg-warning">Maintenance</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@asset.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <a asp-page="../Assets/Details" asp-route-id="@asset.Id" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye me-1"></i>View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-laptop display-4 text-muted"></i>
                        <h6 class="text-muted mt-3">No Assets Assigned</h6>
                        <p class="text-muted">This employee doesn't have any assets assigned yet.</p>
                        <a asp-page="../Assets/Index" class="btn btn-outline-primary">
                            <i class="bi bi-plus me-2"></i>Assign Assets
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightning me-2"></i>Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-page="./Edit" asp-route-id="@Model.Employee.Id" class="btn btn-outline-primary">
                        <i class="bi bi-pencil me-2"></i>Edit Employee
                    </a>
                    <a asp-page="../Assets/Index" asp-route-assignedEmployeeId="@Model.Employee.Id" class="btn btn-outline-success">
                        <i class="bi bi-laptop me-2"></i>View Assets
                    </a>
                    @if (!string.IsNullOrEmpty(Model.Employee.Email))
                    {
                        <a href="mailto:@Model.Employee.Email" class="btn btn-outline-info">
                            <i class="bi bi-envelope me-2"></i>Send Email
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Employee Statistics -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0">
                    <i class="bi bi-bar-chart me-2"></i>Statistics
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="text-primary mb-1">@Model.Employee.Assets.Count</h4>
                            <small class="text-muted">Assets</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="text-success mb-1">@Model.Employee.Assets.Count(a => a.Status.ToString() == "Active")</h4>
                        <small class="text-muted">Active</small>
                    </div>
                </div>
                <hr>
                <div class="small">
                    <div class="d-flex justify-content-between mb-1">
                        <span>Total Assets:</span>
                        <span class="fw-medium">@Model.Employee.Assets.Count</span>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <span>Active Assets:</span>
                        <span class="fw-medium">@Model.Employee.Assets.Count(a => a.Status.ToString() == "Active")</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>In Maintenance:</span>
                        <span class="fw-medium">@Model.Employee.Assets.Count(a => a.Status.ToString() == "Maintenance")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}