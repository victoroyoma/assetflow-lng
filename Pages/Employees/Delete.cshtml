@page
@model buildone.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-danger">
            <i class="bi bi-trash me-2"></i>Delete Employee
        </h1>
        <p class="text-muted mb-0">Permanently remove employee from the system</p>
    </div>
    <div>
        <a asp-page="./Details" asp-route-id="@Model.Employee.Id" class="btn btn-outline-info me-2">
            <i class="bi bi-eye me-2"></i>View Details
        </a>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Employees
        </a>
    </div>
</div>

<!-- Warning Alert -->
<div class="alert alert-danger border-0 shadow-sm mb-4" role="alert">
    <div class="d-flex align-items-center">
        <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
        <div>
            <h5 class="alert-heading mb-1">Warning: This action cannot be undone!</h5>
            <p class="mb-0">Deleting this employee will permanently remove them from the system. Make sure all assets are properly reassigned before proceeding.</p>
        </div>
    </div>
</div>

@if (Model.HasAssets)
{
    <!-- Assets Warning -->
    <div class="alert alert-warning border-0 shadow-sm mb-4" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-laptop me-3 fs-4"></i>
            <div>
                <h6 class="alert-heading mb-1">Cannot Delete: Employee Has Assigned Assets</h6>
                <p class="mb-0">This employee has <strong>@Model.AssetCount asset(s)</strong> assigned to them. Please reassign or remove these assets before deleting the employee.</p>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <!-- Employee Information -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="bi bi-person me-2"></i>Employee to be Deleted
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted">Full Name</label>
                        <div class="fw-medium fs-5">@Model.Employee.FullName</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Username</label>
                        <div class="fw-medium">@Model.Employee.Username</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Email</label>
                        <div class="fw-medium">
                            @if (!string.IsNullOrEmpty(Model.Employee.Email))
                            {
                                <span>@Model.Employee.Email</span>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Phone</label>
                        <div class="fw-medium">
                            @if (!string.IsNullOrEmpty(Model.Employee.Phone))
                            {
                                <span>@Model.Employee.Phone</span>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Department</label>
                        <div class="fw-medium">
                            @if (Model.Employee.Department != null)
                            {
                                <span class="badge bg-light text-dark fs-6">@Model.Employee.Department.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">No department assigned</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">Assigned Assets</label>
                        <div class="fw-medium">
                            @if (Model.HasAssets)
                            {
                                <span class="badge bg-warning text-dark fs-6">@Model.AssetCount asset(s)</span>
                            }
                            else
                            {
                                <span class="badge bg-success fs-6">No assets assigned</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.HasAssets)
        {
            <!-- Assigned Assets List -->
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-laptop me-2"></i>Assigned Assets (@Model.AssetCount)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Asset</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var asset in Model.Employee.Assets)
                                {
                                    <tr>
                                        <td>
                                            <div>
                                                <div class="fw-medium">@asset.AssetDescription</div>
                                                <small class="text-muted">
                                                    <span class="badge bg-light text-dark">@asset.AssetTag</span>
                                                </small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@asset.Type</span>
                                        </td>
                                        <td>
                                            @switch (asset.Status.ToString())
                                            {
                                                case "Active":
                                                    <span class="badge bg-success">Active</span>
                                                    break;
                                                case "InStock":
                                                    <span class="badge bg-primary">In Stock</span>
                                                    break;
                                                case "Maintenance":
                                                    <span class="badge bg-warning">Maintenance</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@asset.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <a asp-page="../Assets/Edit" asp-route-id="@asset.Id" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-pencil me-1"></i>Reassign
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="alert alert-info border-0 mt-3">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Before deletion:</strong> Please reassign these assets to other employees or set them as unassigned.
                    </div>
                </div>
            </div>
        }

        <!-- Deletion Form -->
        @if (!Model.HasAssets)
        {
            <form method="post" id="deleteForm">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-3">
                            Are you absolutely sure you want to delete the employee <strong>@Model.Employee.FullName</strong>?
                            This action cannot be undone and will permanently remove:
                        </p>
                        <ul class="mb-3">
                            <li>Employee record and all associated data</li>
                            <li>Login credentials and access permissions</li>
                            <li>Historical records and activity logs</li>
                        </ul>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                            <label class="form-check-label" for="confirmDelete">
                                I understand that this action cannot be undone
                            </label>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                                <i class="bi bi-trash me-2"></i>Delete Employee
                            </button>
                            <a asp-page="./Details" asp-route-id="@Model.Employee.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        }
        else
        {
            <!-- Blocked Actions -->
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-shield-exclamation me-2"></i>Deletion Blocked
                    </h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        This employee cannot be deleted because they have assets assigned to them.
                        Please complete the following steps first:
                    </p>
                    <ol class="mb-3">
                        <li>Reassign all assets to other employees, or</li>
                        <li>Set assets as unassigned in the asset management system</li>
                        <li>Return to this page to complete the deletion</li>
                    </ol>
                    <div class="d-flex gap-2">
                        <a asp-page="../Assets/Index" asp-route-assignedEmployeeId="@Model.Employee.Id" class="btn btn-warning">
                            <i class="bi bi-laptop me-2"></i>Manage Assets
                        </a>
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Employees
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col-lg-4">
        <!-- Guidelines -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Deletion Guidelines
                </h6>
            </div>
            <div class="card-body">
                <div class="small">
                    <h6 class="fw-bold text-danger">Before Deleting:</h6>
                    <ul class="list-unstyled mb-3">
                        <li><i class="bi bi-check-square text-success me-2"></i>Verify no assets assigned</li>
                        <li><i class="bi bi-check-square text-success me-2"></i>Export any needed data</li>
                        <li><i class="bi bi-check-square text-success me-2"></i>Notify team members</li>
                        <li><i class="bi bi-check-square text-success me-2"></i>Update documentation</li>
                    </ul>

                    <h6 class="fw-bold text-warning">What Gets Deleted:</h6>
                    <ul class="list-unstyled mb-3">
                        <li><i class="bi bi-x text-danger me-2"></i>Employee profile</li>
                        <li><i class="bi bi-x text-danger me-2"></i>Login credentials</li>
                        <li><i class="bi bi-x text-danger me-2"></i>Activity history</li>
                        <li><i class="bi bi-x text-danger me-2"></i>System permissions</li>
                    </ul>

                    <h6 class="fw-bold text-info">Best Practices:</h6>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-lightbulb text-warning me-2"></i>Consider deactivating instead</li>
                        <li><i class="bi bi-lightbulb text-warning me-2"></i>Archive important data first</li>
                        <li><i class="bi bi-lightbulb text-warning me-2"></i>Document the reason</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable/disable delete button based on confirmation checkbox
            $('#confirmDelete').on('change', function() {
                $('#deleteButton').prop('disabled', !this.checked);
            });

            // Form submission with loading state
            $('#deleteForm').on('submit', function(e) {
                var deleteButton = $('#deleteButton');
                deleteButton.prop('disabled', true);
                deleteButton.html('<span class="spinner-border spinner-border-sm me-2"></span>Deleting...');
                
                // Show confirmation dialog
                if (!confirm('Are you absolutely sure you want to delete this employee? This action cannot be undone.')) {
                    e.preventDefault();
                    deleteButton.prop('disabled', false);
                    deleteButton.html('<i class="bi bi-trash me-2"></i>Delete Employee');
                }
            });
        });
    </script>
}