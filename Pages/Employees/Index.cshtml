@page
@model buildone.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employees";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-people me-2 text-primary"></i>Employee Management
        </h1>
        <p class="text-muted mb-0">Manage company employees and their information</p>
    </div>
    <div>
        <a asp-page="./Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Add Employee
        </a>
    </div>
</div>

<!-- Alert Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="d-flex align-items-center justify-content-center mb-2">
                    <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                        <i class="bi bi-people text-primary"></i>
                    </div>
                </div>
                <div>
                    <h4 class="card-title mb-1">@Model.TotalEmployees</h4>
                    <p class="card-text text-muted small mb-0">Total Employees</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="d-flex align-items-center justify-content-center mb-2">
                    <div class="rounded-circle bg-success bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                        <i class="bi bi-person-check text-success"></i>
                    </div>
                </div>
                <div>
                    <h4 class="card-title mb-1">@Model.AssignedEmployees</h4>
                    <p class="card-text text-muted small mb-0">With Assets</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="d-flex align-items-center justify-content-center mb-2">
                    <div class="rounded-circle bg-warning bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                        <i class="bi bi-person-dash text-warning"></i>
                    </div>
                </div>
                <div>
                    <h4 class="card-title mb-1">@Model.UnassignedEmployees</h4>
                    <p class="card-text text-muted small mb-0">No Assets</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4 border-0 shadow-sm">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label for="searchTerm" class="form-label">Search</label>
                <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                       value="@Model.SearchTerm" placeholder="Search by name, username, or email...">
            </div>
            <div class="col-md-4">
                <label for="departmentFilter" class="form-label">Department</label>
                <select class="form-select" id="departmentFilter" name="departmentFilter">
                    <option value="">All Departments</option>
                    @foreach (var department in Model.Departments)
                    {
                        <option value="@department.Id" selected="@(Model.DepartmentFilter == department.Id.ToString())">
                            @department.Name
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">Filter</button>
                <a asp-page="./Index" class="btn btn-outline-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<!-- Employees Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Employees (@Model.Employees.Count items)</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Employees.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="employeesTable">
                    <thead class="table-light">
                        <tr>
                            <th>Employee Info</th>
                            <th>Contact</th>
                            <th>Department</th>
                            <th>Assets Assigned</th>
                            <th width="160">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <div class="fw-bold">@employee.FullName</div>
                                        <small class="text-muted">
                                            <i class="bi bi-person-badge me-1"></i>@employee.Username
                                        </small>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(employee.Email))
                                    {
                                        <div>
                                            <i class="bi bi-envelope me-1"></i>
                                            <a href="mailto:@employee.Email">@employee.Email</a>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(employee.Phone))
                                    {
                                        <div class="small text-muted">
                                            <i class="bi bi-telephone me-1"></i>@employee.Phone
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (employee.Department != null)
                                    {
                                        <span class="badge bg-light text-dark">@employee.Department.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Department</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-primary">@employee.Assets.Count</span>
                                </td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <a asp-page="./Details" asp-route-id="@employee.Id" 
                                           class="btn btn-sm btn-outline-info d-flex align-items-center justify-content-center" 
                                           style="width: 32px; height: 32px;" 
                                           title="View Details" 
                                           data-bs-toggle="tooltip">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@employee.Id" 
                                           class="btn btn-sm btn-outline-warning d-flex align-items-center justify-content-center" 
                                           style="width: 32px; height: 32px;" 
                                           title="Edit Employee" 
                                           data-bs-toggle="tooltip">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-danger d-flex align-items-center justify-content-center" 
                                                style="width: 32px; height: 32px;" 
                                                onclick="confirmDelete(@employee.Id, '@employee.FullName')" 
                                                title="Delete Employee" 
                                                data-bs-toggle="tooltip">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                        
                                        <!-- Dropdown for Additional Actions -->
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary d-flex align-items-center justify-content-center" 
                                                    style="width: 32px; height: 32px;" 
                                                    type="button" 
                                                    data-bs-toggle="dropdown" 
                                                    title="More Actions" 
                                                    data-bs-toggle="tooltip">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <h6 class="dropdown-header d-flex align-items-center">
                                                        <i class="bi bi-person me-2"></i>Employee Actions
                                                    </h6>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                
                                                <!-- Assignment Actions -->
                                                <li>
                                                    <button class="dropdown-item d-flex align-items-center" 
                                                            onclick="showAssetAssignmentModal(@employee.Id, '@employee.FullName')">
                                                        <i class="bi bi-laptop text-primary me-2"></i>Assign Assets
                                                    </button>
                                                </li>
                                                @if (employee.Assets.Any())
                                                {
                                                    <li>
                                                        <button class="dropdown-item d-flex align-items-center" 
                                                                onclick="unassignAllAssets(@employee.Id)">
                                                            <i class="bi bi-laptop-fill text-secondary me-2"></i>Unassign All Assets
                                                        </button>
                                                    </li>
                                                }
                                                
                                                <li><hr class="dropdown-divider"></li>
                                                
                                                <!-- Department Actions -->
                                                <li>
                                                    <button class="dropdown-item d-flex align-items-center" 
                                                            onclick="changeDepartment(@employee.Id, '@employee.FullName')">
                                                        <i class="bi bi-building text-info me-2"></i>Change Department
                                                    </button>
                                                </li>
                                                
                                                <!-- History -->
                                                <li>
                                                    <a class="dropdown-item d-flex align-items-center" 
                                                       href="#" onclick="showEmployeeHistory(@employee.Id)">
                                                        <i class="bi bi-clock-history text-secondary me-2"></i>View Activity
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            ViewData["PageIndex"] = Model.Employees.PageIndex;
            ViewData["TotalPages"] = Model.Employees.TotalPages;
            ViewData["TotalCount"] = Model.Employees.TotalCount;
            ViewData["PageSize"] = Model.Employees.PageSize;
            
            @if (Model.Employees.TotalPages > 1)
            {
                <div class="card-footer bg-light">
                    <partial name="_Pagination" />
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people display-1 text-muted"></i>
                <h4 class="text-muted mt-3">No Employees Found</h4>
                <p class="text-muted mb-4">
                    @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.DepartmentFilter))
                    {
                        <span>No employees match your current filters.</span>
                    }
                    else
                    {
                        <span>Get started by adding your first employee.</span>
                    }
                </p>
                <a asp-page="./Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add Employee
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete employee <strong id="employeeName"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    This action cannot be undone. Employees with assigned assets cannot be deleted.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" id="deleteForm" style="display: inline;">
                    <input type="hidden" name="id" id="deleteEmployeeId">
                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete Employee
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(employeeId, employeeName) {
            document.getElementById('deleteEmployeeId').value = employeeId;
            document.getElementById('employeeName').textContent = employeeName;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}