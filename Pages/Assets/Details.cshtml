@page "{id:int}"
@model buildone.Pages.Assets.DetailsModel
@{
    ViewData["Title"] = $"Asset Details - {Model.Asset.AssetTag}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Asset Details</h1>
        <p class="text-muted mb-0">@Model.Asset.AssetTag - @Model.Asset.AssetDescription</p>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Asset.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Assets
        </a>
    </div>
</div>

<!-- Alert Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- Basic Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Basic Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-5">Asset Tag:</dt>
                            <dd class="col-7">
                                <span class="badge bg-primary fs-6">@Model.Asset.AssetTag</span>
                            </dd>
                            <dt class="col-5">PC ID:</dt>
                            <dd class="col-7">@Model.Asset.PcId</dd>
                            <dt class="col-5">Type:</dt>
                            <dd class="col-7">@Model.Asset.Type</dd>
                            <dt class="col-5">Status:</dt>
                            <dd class="col-7">
                                @{
                                    var statusClass = Model.Asset.Status switch
                                    {
                                        Data.Enums.AssetStatus.Active => "success",
                                        Data.Enums.AssetStatus.InStock => "secondary",
                                        Data.Enums.AssetStatus.Maintenance => "warning",
                                        Data.Enums.AssetStatus.InRepair => "danger",
                                        Data.Enums.AssetStatus.Retired => "dark",
                                        _ => "info"
                                    };
                                }
                                <span class="badge bg-@statusClass">@Model.Asset.Status</span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-5">Brand:</dt>
                            <dd class="col-7">@(Model.Asset.Brand ?? "Not specified")</dd>
                            <dt class="col-5">Model:</dt>
                            <dd class="col-7">@(Model.Asset.Model ?? "Not specified")</dd>
                            <dt class="col-5">Serial Number:</dt>
                            <dd class="col-7">@(Model.Asset.SerialNumber ?? "Not specified")</dd>
                            <dt class="col-5">Warranty Expiry:</dt>
                            <dd class="col-7">
                                @if (Model.Asset.WarrantyExpiry.HasValue)
                                {
                                    var warrantyStatus = Model.Asset.WarrantyExpiry.Value < DateTime.Now ? "Expired" : "Active";
                                    var warrantyClass = warrantyStatus == "Expired" ? "text-danger" : "text-success";
                                    <span class="@warrantyClass">
                                        @Model.Asset.WarrantyExpiry.Value.ToString("MMM dd, yyyy") (@warrantyStatus)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Not specified</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Technical Details -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-gear me-2"></i>Technical Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-6">Imaging Type:</dt>
                            <dd class="col-6">@Model.Asset.ImagingType</dd>
                            <dt class="col-6">Deployment Type:</dt>
                            <dd class="col-6">@Model.Asset.DeploymentType</dd>
                        </dl>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Asset.Notes))
                {
                    <hr>
                    <h6>Notes</h6>
                    <p class="text-muted">@Model.Asset.Notes</p>
                }
            </div>
        </div>

        <!-- Assignment Information -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-person-badge me-2"></i>Assignment Information
                </h5>
                <div>
                    @if (Model.Asset.AssignedEmployee != null)
                    {
                        <button class="btn btn-sm btn-outline-warning" data-bs-toggle="modal" data-bs-target="#unassignModal">
                            <i class="bi bi-person-dash"></i> Unassign
                        </button>
                    }
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#assignModal">
                        <i class="bi bi-person-plus"></i> @(Model.Asset.AssignedEmployee != null ? "Reassign" : "Assign")
                    </button>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Asset.AssignedEmployee != null)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-5">Employee:</dt>
                                <dd class="col-7">@Model.Asset.AssignedEmployee.FullName</dd>
                                <dt class="col-5">Email:</dt>
                                <dd class="col-7">@Model.Asset.AssignedEmployee.Email</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-5">Department:</dt>
                                <dd class="col-7">@(Model.Asset.Department?.Name ?? "None")</dd>
                                <dt class="col-5">Phone:</dt>
                                <dd class="col-7">@(Model.Asset.AssignedEmployee.Phone ?? "Not provided")</dd>
                            </dl>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="bi bi-person-x text-muted" style="font-size: 2rem;"></i>
                        <p class="text-muted mt-2">This asset is not currently assigned to any employee.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Imaging Jobs -->
        @if (Model.ImagingJobs.Any())
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-disc me-2"></i>Imaging Jobs (@Model.ImagingJobs.Count)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Technician</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var job in Model.ImagingJobs.Take(5))
                                {
                                    <tr>
                                        <td><small>@job.CreatedAt.ToString("MMM dd, yyyy")</small></td>
                                        <td>@job.ImagingType</td>
                                        <td>
                                            @{
                                                var jobStatusClass = job.Status switch
                                                {
                                                    Data.Enums.JobStatus.Completed => "success",
                                                    Data.Enums.JobStatus.InProgress => "primary",
                                                    Data.Enums.JobStatus.Failed => "danger",
                                                    _ => "secondary"
                                                };
                                            }
                                            <span class="badge bg-@jobStatusClass">@job.Status</span>
                                        </td>
                                        <td>@(job.Technician?.FullName ?? "Not assigned")</td>
                                        <td><small>@(job.Notes ?? "")</small></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.ImagingJobs.Count > 5)
                    {
                        <div class="text-center">
                            <a asp-page="/Imaging/Index" asp-route-assetId="@Model.Asset.Id" class="btn btn-sm btn-outline-primary">
                                View All @Model.ImagingJobs.Count Jobs
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightning me-2"></i>Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (Model.Asset.Status != Data.Enums.AssetStatus.Active)
                    {
                        <form method="post" asp-page-handler="SetActive" class="d-inline">
                            <input type="hidden" name="id" value="@Model.Asset.Id" />
                            <button type="submit" class="btn btn-success btn-sm w-100">
                                <i class="bi bi-check-circle me-2"></i>Mark as Active
                            </button>
                        </form>
                    }
                    @if (Model.Asset.Status != Data.Enums.AssetStatus.Maintenance)
                    {
                        <form method="post" asp-page-handler="SetMaintenance" class="d-inline">
                            <input type="hidden" name="id" value="@Model.Asset.Id" />
                            <button type="submit" class="btn btn-warning btn-sm w-100">
                                <i class="bi bi-wrench me-2"></i>Send to Maintenance
                            </button>
                        </form>
                    }
                    <a asp-page="/Imaging/Create" asp-route-assetId="@Model.Asset.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-disc me-2"></i>Create Imaging Job
                    </a>
                </div>
            </div>
        </div>

        <!-- Audit Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-clock-history me-2"></i>Audit Information
                </h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-5">Created:</dt>
                    <dd class="col-7"><small>@Model.Asset.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small></dd>
                    @if (Model.Asset.UpdatedAt.HasValue)
                    {
                        <dt class="col-5">Last Updated:</dt>
                        <dd class="col-7"><small>@Model.Asset.UpdatedAt.Value.ToString("MMM dd, yyyy HH:mm")</small></dd>
                    }
                </dl>
            </div>
        </div>

        <!-- Asset History -->
        @if (Model.AssetHistory.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-list-ul me-2"></i>Recent History (@Model.AssetHistory.Count)
                    </h6>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        @foreach (var history in Model.AssetHistory.Take(5))
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-primary"></div>
                                <div class="timeline-content">
                                    <small class="text-muted">@history.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                    <p class="mb-1 small"><strong>@history.Action</strong></p>
                                    @if (!string.IsNullOrEmpty(history.FromValue) && !string.IsNullOrEmpty(history.ToValue))
                                    {
                                        <p class="mb-0 small text-muted">
                                            From: @history.FromValue → To: @history.ToValue
                                        </p>
                                    }
                                    @if (!string.IsNullOrEmpty(history.Notes))
                                    {
                                        <p class="mb-0 small text-muted">@history.Notes</p>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Assignment Modal -->
<div class="modal fade" id="assignModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(Model.Asset.AssignedEmployee != null ? "Reassign" : "Assign") Asset</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="Assign">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="employeeId" class="form-label">Employee <span class="text-danger">*</span></label>
                        <select name="employeeId" id="employeeId" class="form-select" required>
                            <option value="">Select an employee</option>
                            @foreach (var employee in Model.Employees)
                            {
                                <option value="@employee.Id">@employee.FullName (@employee.Department?.Name)</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="departmentId" class="form-label">Department</label>
                        <select name="departmentId" id="departmentId" class="form-select">
                            <option value="">No department</option>
                            @foreach (var department in Model.Departments)
                            {
                                <option value="@department.Id">@department.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Assign Asset</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Unassign Modal -->
@if (Model.Asset.AssignedEmployee != null)
{
    <div class="modal fade" id="unassignModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Unassign Asset</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to unassign this asset from <strong>@Model.Asset.AssignedEmployee.FullName</strong>?</p>
                    <p class="text-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        The asset status will be changed to "In Stock".
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form method="post" asp-page-handler="Unassign" class="d-inline">
                        <button type="submit" class="btn btn-warning">Unassign Asset</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Styles {
    <style>
        .timeline {
            position: relative;
            padding: 0;
        }

        .timeline-item {
            position: relative;
            padding-left: 30px;
            margin-bottom: 20px;
        }

        .timeline-item:not(:last-child):before {
            content: '';
            position: absolute;
            left: 8px;
            top: 20px;
            height: calc(100% + 10px);
            width: 2px;
            background: #e9ecef;
        }

        .timeline-marker {
            position: absolute;
            left: 0;
            top: 6px;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            border: 2px solid #fff;
            box-shadow: 0 0 0 2px #e9ecef;
        }

        .timeline-content {
            margin-left: 0;
        }
    </style>
}