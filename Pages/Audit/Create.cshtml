@page
@model buildone.Pages.Audit.CreateModel
@{
    ViewData["Title"] = "Start New Audit";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-clipboard-check"></i> Start New Asset Audit</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Create a new audit session to scan and verify assets. You can scan multiple assets 
                        in one session, and the system will automatically track changes, identify new assets, 
                        and update asset information.
                    </p>

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="AuditSessionId" class="form-label">Audit Session ID</label>
                            <input asp-for="AuditSessionId" class="form-control" readonly />
                            <small class="form-text text-muted">This unique ID will group all assets scanned in this session.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AuditedBy" class="form-label">Audited By *</label>
                            <input asp-for="AuditedBy" class="form-control" placeholder="Enter your name" />
                            <span asp-validation-for="AuditedBy" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Notes (Optional)</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter any notes about this audit session"></textarea>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>What happens next?</strong>
                            <ul class="mb-0 mt-2">
                                <li>You'll be taken to the scanner page</li>
                                <li>Scan asset QR codes or barcodes</li>
                                <li>System will compare scanned data with existing records</li>
                                <li>You can update status, location, and other details</li>
                                <li>New assets will be automatically flagged</li>
                            </ul>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-play"></i> Start Audit Session
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
