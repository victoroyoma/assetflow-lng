<!-- Expired Warranties -->
@if (Model.ExpiredWarrantyList.Any())
{
    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">
                <i class="bi bi-shield-x me-2"></i>Expired Warranties (@Model.ExpiredWarranties)
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Item Name</th>
                            <th>SKU</th>
                            <th>Category</th>
                            <th>Warranty End Date</th>
                            <th>Days Since Expiry</th>
                            <th>Provider</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ExpiredWarrantyList)
                        {
                            var daysSinceExpiry = item.WarrantyEndDate.HasValue 
                                ? Math.Abs((int)(DateTime.UtcNow - item.WarrantyEndDate.Value).TotalDays)
                                : 0;
                            
                            <tr>
                                <td><strong>@item.ItemName</strong></td>
                                <td>@(item.SKU ?? "N/A")</td>
                                <td><span class="badge bg-light text-dark">@item.Category</span></td>
                                <td>@item.WarrantyEndDate?.ToString("MMM dd, yyyy")</td>
                                <td><span class="text-muted">@daysSinceExpiry days ago</span></td>
                                <td>@(item.WarrantyProvider ?? "N/A")</td>
                                <td>
                                    <a asp-page="/Inventory/Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Category Distribution -->
<div class="row mb-4">
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-pie-chart me-2"></i>Inventory by Category
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Count</th>
                                <th>Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model.ItemsByCategory)
                            {
                                var percentage = (double)category.Value / Math.Max(Model.TotalItems, 1) * 100;
                                <tr>
                                    <td>@category.Key</td>
                                    <td>@category.Value</td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar" style="width: @percentage%">
                                                @percentage.ToString("F1")%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-bar-chart me-2"></i>Inventory by Stock Status
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Status</th>
                                <th>Count</th>
                                <th>Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var status in Model.ItemsByStockStatus.OrderByDescending(x => x.Value))
                            {
                                var percentage = (double)status.Value / Math.Max(Model.TotalItems, 1) * 100;
                                var badgeClass = status.Key switch
                                {
                                    "OutOfStock" => "bg-danger",
                                    "LowStock" => "bg-warning",
                                    "InStock" => "bg-success",
                                    "FullyStocked" => "bg-info",
                                    "Overstocked" => "bg-secondary",
                                    _ => "bg-secondary"
                                };
                                
                                <tr>
                                    <td><span class="badge @badgeClass">@status.Key</span></td>
                                    <td>@status.Value</td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar @badgeClass" style="width: @percentage%">
                                                @percentage.ToString("F1")%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
