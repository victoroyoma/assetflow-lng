@page
@model buildone.Pages.Reports.InventoryReportModel
@{
    ViewData["Title"] = "Inventory Report";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-box-seam me-2"></i>Inventory Report
        </h1>
        <p class="text-muted mb-0">Comprehensive inventory and warranty analytics</p>
    </div>
    <div>
        <a asp-page="./Index" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                <i class="bi bi-download"></i> Export
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#" onclick="window.print()"><i class="bi bi-printer me-2"></i>Print Report</a></li>
                <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-pdf me-2"></i>Export to PDF</a></li>
                <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-excel me-2"></i>Export to Excel</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Stock Status Overview -->
<div class="row mb-4">
    <div class="col-12">
        <h5 class="mb-3">Stock Status Overview</h5>
    </div>
    
    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
        <div class="card border-primary h-100">
            <div class="card-body text-center">
                <i class="bi bi-boxes text-primary display-6 mb-2"></i>
                <h4 class="card-title mb-1">@Model.TotalItems</h4>
                <p class="card-text text-muted small mb-0">Total Items</p>
            </div>
        </div>
    </div>
    
    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
        <div class="card border-danger h-100">
            <div class="card-body text-center">
                <i class="bi bi-x-octagon text-danger display-6 mb-2"></i>
                <h4 class="card-title mb-1">@Model.OutOfStockItems</h4>
                <p class="card-text text-muted small mb-0">Out of Stock</p>
            </div>
        </div>
    </div>
    
    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
        <div class="card border-warning h-100">
            <div class="card-body text-center">
                <i class="bi bi-exclamation-triangle text-warning display-6 mb-2"></i>
                <h4 class="card-title mb-1">@Model.LowStockItems</h4>
                <p class="card-text text-muted small mb-0">Low Stock</p>
            </div>
        </div>
    </div>
    
    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
        <div class="card border-success h-100">
            <div class="card-body text-center">
                <i class="bi bi-check-circle text-success display-6 mb-2"></i>
                <h4 class="card-title mb-1">@Model.InStockItems</h4>
                <p class="card-text text-muted small mb-0">In Stock</p>
            </div>
        </div>
    </div>
    
    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
        <div class="card border-info h-100">
            <div class="card-body text-center">
                <i class="bi bi-box-fill text-info display-6 mb-2"></i>
                <h4 class="card-title mb-1">@Model.FullyStockedItems</h4>
                <p class="card-text text-muted small mb-0">Fully Stocked</p>
            </div>
        </div>
    </div>
    
    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
        <div class="card border-secondary h-100">
            <div class="card-body text-center">
                <i class="bi bi-archive text-secondary display-6 mb-2"></i>
                <h4 class="card-title mb-1">@Model.OverstockedItems</h4>
                <p class="card-text text-muted small mb-0">Overstocked</p>
            </div>
        </div>
    </div>
</div>

<!-- Warranty Status Overview -->
<div class="row mb-4">
    <div class="col-12">
        <h5 class="mb-3">Warranty Status Overview</h5>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-primary h-100">
            <div class="card-body text-center">
                <i class="bi bi-shield text-primary display-6 mb-2"></i>
                <h4 class="card-title mb-1">@Model.ItemsWithWarranty</h4>
                <p class="card-text text-muted small mb-0">Items with Warranty Info</p>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-success h-100">
            <div class="card-body text-center">
                <i class="bi bi-shield-check text-success display-6 mb-2"></i>
                <h4 class="card-title mb-1">@Model.ActiveWarranties</h4>
                <p class="card-text text-muted small mb-0">Active Warranties</p>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-warning h-100">
            <div class="card-body text-center">
                <i class="bi bi-shield-exclamation text-warning display-6 mb-2"></i>
                <h4 class="card-title mb-1">@Model.WarrantyExpiringSoon</h4>
                <p class="card-text text-muted small mb-0">Expiring Soon (< 3 months)</p>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-danger h-100">
            <div class="card-body text-center">
                <i class="bi bi-shield-x text-danger display-6 mb-2"></i>
                <h4 class="card-title mb-1">@Model.ExpiredWarranties</h4>
                <p class="card-text text-muted small mb-0">Expired Warranties</p>
            </div>
        </div>
    </div>
</div>

<!-- Out of Stock Items -->
@if (Model.OutOfStockList.Any())
{
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="bi bi-exclamation-octagon me-2"></i>Out of Stock Items (@Model.OutOfStockItems)
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Item Name</th>
                            <th>SKU</th>
                            <th>Category</th>
                            <th>Location</th>
                            <th>Last Restocked</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OutOfStockList)
                        {
                            <tr>
                                <td><strong>@item.ItemName</strong></td>
                                <td>@(item.SKU ?? "N/A")</td>
                                <td><span class="badge bg-light text-dark">@item.Category</span></td>
                                <td>@(item.StorageLocation ?? "N/A")</td>
                                <td>@(item.LastRestocked?.ToString("MMM dd, yyyy") ?? "Never")</td>
                                <td>
                                    <a asp-page="/Inventory/Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Low Stock Items -->
@if (Model.LowStockList.Any())
{
    <div class="card mb-4">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">
                <i class="bi bi-exclamation-triangle me-2"></i>Low Stock Items (@Model.LowStockItems)
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Item Name</th>
                            <th>SKU</th>
                            <th>Category</th>
                            <th>Current Qty</th>
                            <th>Min Qty</th>
                            <th>Max Qty</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LowStockList)
                        {
                            <tr>
                                <td><strong>@item.ItemName</strong></td>
                                <td>@(item.SKU ?? "N/A")</td>
                                <td><span class="badge bg-light text-dark">@item.Category</span></td>
                                <td class="text-warning"><strong>@item.CurrentQuantity @item.Unit</strong></td>
                                <td>@item.MinimumQuantity</td>
                                <td>@item.MaximumQuantity</td>
                                <td>
                                    <a asp-page="/Inventory/Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Warranty Expiring Soon -->
@if (Model.WarrantyExpiringSoonList.Any())
{
    <div class="card mb-4">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">
                <i class="bi bi-shield-exclamation me-2"></i>Warranties Expiring Soon (@Model.WarrantyExpiringSoon)
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Item Name</th>
                            <th>SKU</th>
                            <th>Category</th>
                            <th>Warranty End Date</th>
                            <th>Days Remaining</th>
                            <th>Provider</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.WarrantyExpiringSoonList)
                        {
                            <tr>
                                <td><strong>@item.ItemName</strong></td>
                                <td>@(item.SKU ?? "N/A")</td>
                                <td><span class="badge bg-light text-dark">@item.Category</span></td>
                                <td>@item.WarrantyEndDate?.ToString("MMM dd, yyyy")</td>
                                <td><span class="badge bg-warning">@item.DaysUntilWarrantyExpiry days</span></td>
                                <td>@(item.WarrantyProvider ?? "N/A")</td>
                                <td>
                                    <a asp-page="/Inventory/Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
