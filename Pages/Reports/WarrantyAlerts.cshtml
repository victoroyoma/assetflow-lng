{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Warning - Expiring in 31-60 Days (@Model.WarningAssets.Count)
                        <span class="badge bg-light text-dark ms-2">Plan Renewal</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-info">
                                <tr>
                                    <th>Asset Tag</th>
                                    <th>Type</th>
                                    <th>Brand/Model</th>
                                    <th>Department</th>
                                    <th>Expiry Date</th>
                                    <th>Days Left</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var asset in Model.WarningAssets)
                                {
                                    var daysLeft = (asset.WarrantyExpiry!.Value - DateTime.Now).Days;
                                    <tr>
                                        <td><strong>@asset.AssetTag</strong></td>
                                        <td><span class="badge bg-secondary">@asset.Type</span></td>
                                        <td>@asset.Brand @asset.Model</td>
                                        <td>@(asset.Department?.Name ?? "Unassigned")</td>
                                        <td>@asset.WarrantyExpiry.Value.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <span class="badge bg-info">
                                                <i class="bi bi-clock me-1"></i>@daysLeft days
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-page="/Assets/Details" asp-route-id="@asset.Id" class="btn btn-outline-info">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-page="/Assets/Edit" asp-route-id="@asset.Id" class="btn btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Watch Assets (61-90+ days) -->
@if (Model.WatchAssets.Any())
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-secondary">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-eye me-2"></i>Watch List - Expiring Later (@Model.WatchAssets.Count)
                        <span class="badge bg-light text-dark ms-2">Monitor</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Asset Tag</th>
                                    <th>Type</th>
                                    <th>Brand/Model</th>
                                    <th>Department</th>
                                    <th>Expiry Date</th>
                                    <th>Days Left</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var asset in Model.WatchAssets.Take(10))
                                {
                                    var daysLeft = (asset.WarrantyExpiry!.Value - DateTime.Now).Days;
                                    <tr>
                                        <td><strong>@asset.AssetTag</strong></td>
                                        <td><span class="badge bg-secondary">@asset.Type</span></td>
                                        <td>@asset.Brand @asset.Model</td>
                                        <td>@(asset.Department?.Name ?? "Unassigned")</td>
                                        <td>@asset.WarrantyExpiry.Value.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-calendar me-1"></i>@daysLeft days
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.WatchAssets.Count > 10)
                    {
                        <div class="card-footer text-center">
                            <small class="text-muted">Showing 10 of @Model.WatchAssets.Count assets</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

<!-- Assets with No Warranty Information -->
@if (Model.NoWarrantyAssets.Any())
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-dark">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-question-circle me-2"></i>Assets Missing Warranty Information (@Model.NoWarrantyAssets.Count)
                        <span class="badge bg-light text-dark ms-2">Update Required</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Asset Tag</th>
                                    <th>Type</th>
                                    <th>Brand/Model</th>
                                    <th>Department</th>
                                    <th>Age</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var asset in Model.NoWarrantyAssets.Take(15))
                                {
                                    var age = (DateTime.Now - asset.CreatedAt).Days;
                                    <tr>
                                        <td><strong>@asset.AssetTag</strong></td>
                                        <td><span class="badge bg-secondary">@asset.Type</span></td>
                                        <td>@asset.Brand @asset.Model</td>
                                        <td>@(asset.Department?.Name ?? "Unassigned")</td>
                                        <td>
                                            <span class="badge bg-@(age > 365 ? "warning" : "light text-dark")">
                                                @age days old
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-page="/Assets/Edit" asp-route-id="@asset.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil me-1"></i>Add Warranty
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.NoWarrantyAssets.Count > 15)
                    {
                        <div class="card-footer text-center">
                            <small class="text-muted">Showing 15 of @Model.NoWarrantyAssets.Count assets</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

<!-- Empty State -->
@if (Model.TotalAlertsCount == 0 && !Model.NoWarrantyAssets.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-shield-check display-1 text-success opacity-75 mb-4"></i>
                    <h4 class="text-success">All Clear!</h4>
                    <p class="text-muted">No warranty alerts found with the current filters.</p>
                    <a asp-page="./Assets" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Asset Reports
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function exportWarrantyReport(type) {
            // This will be implemented with proper export functionality
            alert(`Exporting ${type} warranty report...`);
        }
    </script>
}