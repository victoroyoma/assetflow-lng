@{
    ViewData["Title"] = "Asset Management Dashboard";
    var stats = ViewBag.InventoryStats;
}

<div class="container-fluid py-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0 bg-primary text-white">
                <div class="card-body py-4">
                    <h1 class="display-5 mb-2">
                        <i class="fas fa-tachometer-alt me-3"></i>Asset Management Dashboard
                    </h1>
                    <p class="mb-0 lead">Comprehensive overview of your IT assets and operations</p>
                    <small class="opacity-75">Welcome back, @User.Identity?.Name</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Inventory Statistics Cards -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3">
                <i class="fas fa-boxes me-2 text-primary"></i>Inventory Summary
            </h4>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <!-- Total Items Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Total Items</p>
                            <h3 class="mb-0 fw-bold">@stats.TotalItems</h3>
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-box fa-3x opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-page="/Inventory/Index" class="btn btn-sm btn-outline-primary w-100">
                            <i class="fas fa-eye me-1"></i>View All
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Quantity Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Total Quantity</p>
                            <h3 class="mb-0 fw-bold">@stats.TotalQuantity</h3>
                        </div>
                        <div class="text-info">
                            <i class="fas fa-cubes fa-3x opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">Units in stock</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Out of Stock Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Out of Stock</p>
                            <h3 class="mb-0 fw-bold text-danger">@stats.OutOfStock</h3>
                        </div>
                        <div class="text-danger">
                            <i class="fas fa-exclamation-circle fa-3x opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        @if (stats.OutOfStock > 0)
                        {
                            <span class="badge bg-danger">Requires Attention</span>
                        }
                        else
                        {
                            <span class="badge bg-success">All Good</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Low Stock Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Low Stock</p>
                            <h3 class="mb-0 fw-bold text-warning">@stats.LowStock</h3>
                        </div>
                        <div class="text-warning">
                            <i class="fas fa-exclamation-triangle fa-3x opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        @if (stats.LowStock > 0)
                        {
                            <span class="badge bg-warning text-dark">Restock Soon</span>
                        }
                        else
                        {
                            <span class="badge bg-success">All Good</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stock Status Breakdown -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h5 class="mb-1">In Stock</h5>
                    <h3 class="text-success mb-0">@stats.InStock</h3>
                    <small class="text-muted">Items available</small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-check-double fa-2x text-info mb-2"></i>
                    <h5 class="mb-1">Fully Stocked</h5>
                    <h3 class="text-info mb-0">@stats.FullyStocked</h3>
                    <small class="text-muted">At capacity</small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-2x text-primary mb-2"></i>
                    <h5 class="mb-1">Total Stock Health</h5>
                    @{
                        var healthyCount = stats.InStock + stats.FullyStocked;
                        var totalCount = stats.TotalItems;
                        var healthPercentage = totalCount > 0 ? (healthyCount * 100 / totalCount) : 0;
                    }
                    <h3 class="text-primary mb-0">@healthPercentage%</h3>
                    <small class="text-muted">Healthy stock levels</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Warranty Status -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3">
                <i class="fas fa-shield-alt me-2 text-primary"></i>Warranty Status
            </h4>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="mb-0">
                                <i class="fas fa-clock text-warning me-2"></i>Expiring Soon
                            </h5>
                            <small class="text-muted">Within 3 months</small>
                        </div>
                        <h2 class="mb-0 text-warning">@stats.ExpiringSoon</h2>
                    </div>
                    @if (stats.ExpiringSoon > 0)
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>@stats.ExpiringSoon</strong> item(s) have warranties expiring within 3 months
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No warranties expiring soon</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="mb-0">
                                <i class="fas fa-times-circle text-danger me-2"></i>Expired
                            </h5>
                            <small class="text-muted">Past warranty date</small>
                        </div>
                        <h2 class="mb-0 text-danger">@stats.Expired</h2>
                    </div>
                    @if (stats.Expired > 0)
                    {
                        <div class="alert alert-danger mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>@stats.Expired</strong> item(s) have expired warranties
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No expired warranties</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2 text-primary"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a asp-page="/Inventory/Create" class="btn btn-success w-100 py-3">
                                <i class="fas fa-plus-circle fa-2x d-block mb-2"></i>
                                Add New Item
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-page="/Inventory/Index" class="btn btn-primary w-100 py-3">
                                <i class="fas fa-list fa-2x d-block mb-2"></i>
                                View Inventory
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-page="/Reports/InventoryReport" class="btn btn-info w-100 py-3">
                                <i class="fas fa-chart-bar fa-2x d-block mb-2"></i>
                                Inventory Report
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-page="/Reports/Index" class="btn btn-secondary w-100 py-3">
                                <i class="fas fa-file-alt fa-2x d-block mb-2"></i>
                                All Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
