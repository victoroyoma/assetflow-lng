@model buildone.Data.ApplicationRole

@{
    ViewData["Title"] = "Role Details";
    var usersInRole = ViewBag.UsersInRole as IList<buildone.Data.ApplicationUser>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>Role Details
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Role Name:</dt>
                        <dd class="col-sm-9">
                            <strong>@Html.DisplayFor(model => model.Name)</strong>
                            @if (Model.Name == "Administrator" || Model.Name == "User" || Model.Name == "Technician")
                            {
                                <span class="badge bg-info ms-2">System Role</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created:</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</dd>

                        <dt class="col-sm-3">Users in Role:</dt>
                        <dd class="col-sm-9">
                            @if (usersInRole != null && usersInRole.Any())
                            {
                                <span class="badge bg-primary">@usersInRole.Count users</span>
                                <div class="mt-2">
                                    @foreach (var user in usersInRole)
                                    {
                                        <span class="badge bg-light text-dark me-1">@user.FullName (@user.Email)</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">No users assigned to this role</span>
                            }
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                        <div>
                            @if (Model.Name != "Administrator" && Model.Name != "User" && Model.Name != "Technician")
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-outline-secondary" disabled title="System roles cannot be modified">
                                    <i class="fas fa-lock me-1"></i>Protected Role
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>