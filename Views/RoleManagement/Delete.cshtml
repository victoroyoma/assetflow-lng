@model buildone.Data.ApplicationRole

@{
    ViewData["Title"] = "Delete Role";
    var usersInRole = ViewBag.UsersInRole as IList<buildone.Data.ApplicationUser>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Role
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Name == "Administrator" || Model.Name == "User" || Model.Name == "Technician")
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-lock me-2"></i>
                            <strong>Error:</strong> System roles cannot be deleted.
                        </div>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                    }
                    else if (usersInRole != null && usersInRole.Any())
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Cannot Delete:</strong> This role is currently assigned to @usersInRole.Count user(s).
                        </div>
                        
                        <h6>Users assigned to this role:</h6>
                        <div class="list-group mb-3">
                            @foreach (var user in usersInRole)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@user.FullName</h6>
                                        <small>@user.Email</small>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Action Required:</strong> Please remove all users from this role before deleting it.
                            You can edit users from the User Management page.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                            <a asp-controller="UserManagement" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-users me-1"></i>Go to User Management
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h5><i class="fas fa-exclamation-triangle me-2"></i>Are you sure you want to delete this role?</h5>
                            <p class="mb-0">This action cannot be undone.</p>
                        </div>

                        <dl class="row mt-4">
                            <dt class="col-sm-3">Role Name:</dt>
                            <dd class="col-sm-9"><strong>@Html.DisplayFor(model => model.Name)</strong></dd>

                            <dt class="col-sm-3">Description:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                            <dt class="col-sm-3">Status:</dt>
                            <dd class="col-sm-9">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </dd>

                            <dt class="col-sm-3">Created:</dt>
                            <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</dd>

                            <dt class="col-sm-3">Users in Role:</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-success">No users assigned</span>
                            </dd>
                        </dl>

                        <form asp-action="Delete" method="post" class="mt-4">
                            <input type="hidden" asp-for="Id" />
                            
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure? This action cannot be undone!');">
                                    <i class="fas fa-trash me-1"></i>Yes, Delete This Role
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
