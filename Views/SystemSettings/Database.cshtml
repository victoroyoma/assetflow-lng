@model buildone.Controllers.DatabaseManagementViewModel

@{
    ViewData["Title"] = "Database Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-database me-2"></i>System Settings
                        </h5>
                        <div class="btn-group" role="group">
                            <a asp-action="Index" class="btn btn-outline-light btn-sm">General</a>
                            <a asp-action="Security" class="btn btn-outline-light btn-sm">Security</a>
                            <a asp-action="Database" class="btn btn-light btn-sm active">Database</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Database Statistics -->
                    <h6 class="border-bottom pb-2 mb-4">
                        <i class="fas fa-chart-bar me-2"></i>Database Statistics
                    </h6>

                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card border-primary shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-hdd fa-3x text-primary"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="card-title mb-0">Database Size</h6>
                                            <h3 class="mb-0">@Model.DatabaseSize</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-success shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-users fa-3x text-success"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="card-title mb-0">Total Users</h6>
                                            <h3 class="mb-0">@Model.TotalUsers</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-info shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-laptop fa-3x text-info"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="card-title mb-0">Total Assets</h6>
                                            <h3 class="mb-0">@Model.TotalAssets</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-warning shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-user-tie fa-3x text-warning"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="card-title mb-0">Total Employees</h6>
                                            <h3 class="mb-0">@Model.TotalEmployees</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Backup Management -->
                    <h6 class="border-bottom pb-2 mb-4">
                        <i class="fas fa-save me-2"></i>Backup Management
                    </h6>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-clock me-2"></i>Last Backup Information
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Last Backup:</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.LastBackup.HasValue)
                                            {
                                                @Model.LastBackup.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")
                                                <br />
                                                <small class="text-muted">(@((DateTime.UtcNow - Model.LastBackup.Value).Days) days ago)</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No backups found</span>
                                            }
                                        </dd>

                                        <dt class="col-sm-4">Backup Status:</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.LastBackup.HasValue && (DateTime.UtcNow - Model.LastBackup.Value).Days < 7)
                                            {
                                                <span class="badge bg-success">Up to date</span>
                                            }
                                            else if (Model.LastBackup.HasValue && (DateTime.UtcNow - Model.LastBackup.Value).Days < 30)
                                            {
                                                <span class="badge bg-warning">Backup recommended</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Backup needed</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="mt-3">
                                <form asp-action="CreateBackup" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success w-100" onclick="return confirm('Are you sure you want to create a database backup? This may take a few minutes.');">
                                        <i class="fas fa-database me-2"></i>Create Backup Now
                                    </button>
                                </form>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-info-circle me-2"></i>Backup Information
                                    </h6>
                                    <ul class="mb-0">
                                        <li>Database backups are created automatically every day at 2:00 AM</li>
                                        <li>Backups are retained for 30 days by default</li>
                                        <li>Manual backups can be created at any time using the button</li>
                                        <li>Backups include all tables, data, and relationships</li>
                                        <li>Large databases may take several minutes to backup</li>
                                    </ul>
                                </div>
                            </div>

                            <div class="alert alert-warning mt-3">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>Important:</strong> Regular backups are essential for data protection. 
                                Ensure you have enough disk space for backup files.
                            </div>
                        </div>
                    </div>

                    <!-- Database Maintenance -->
                    <h6 class="border-bottom pb-2 mb-4 mt-4">
                        <i class="fas fa-tools me-2"></i>Database Maintenance
                    </h6>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="list-group">
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Optimize Database</h6>
                                            <small>Rebuild indexes and optimize tables for better performance</small>
                                        </div>
                                        <button class="btn btn-sm btn-primary" disabled>
                                            <i class="fas fa-cog me-1"></i>Optimize
                                        </button>
                                    </div>
                                </div>
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Clean Up Old Data</h6>
                                            <small>Remove old logs and temporary data</small>
                                        </div>
                                        <button class="btn btn-sm btn-warning" disabled>
                                            <i class="fas fa-trash me-1"></i>Clean Up
                                        </button>
                                    </div>
                                </div>
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Verify Integrity</h6>
                                            <small>Check database for errors or corruption</small>
                                        </div>
                                        <button class="btn btn-sm btn-info" disabled>
                                            <i class="fas fa-check me-1"></i>Verify
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="alert alert-info">
                                <h6><i class="fas fa-lightbulb me-2"></i>Maintenance Tips</h6>
                                <ul class="mb-0">
                                    <li>Schedule maintenance during off-peak hours</li>
                                    <li>Always create a backup before major maintenance</li>
                                    <li>Monitor database size and performance regularly</li>
                                    <li>Remove unused data to improve performance</li>
                                    <li>Keep your database software updated</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to General Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(function(alert) {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
